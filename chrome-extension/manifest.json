{
  "name": "Color Sentence",
  "description": "Color Senetence, Read Easy",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon_on16.png",
      "32": "/images/icon_on32.png",
      "48": "/images/icon_on48.png",
      "128": "/images/icon_on128.png"
    }
  },
  "icons": {
    "16": "/images/icon_on16.png",
    "32": "/images/icon_on32.png",
    "48": "/images/icon_on48.png",
    "128": "/images/icon_on128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["content.css"],
      "js": ["content-script.js"]
    }
  ]
}
